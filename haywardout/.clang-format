---
BasedOnStyle: LLVM
IndentWidth: 4
UseTab: Never
TabWidth: 4
---
Language: Cpp
ColumnLimit: 100
AlignAfterOpenBracket: BlockIndent
AlignOperands: DontAlign
BreakBeforeTernaryOperators: true
AlwaysBreakAfterReturnType: All
ReflowComments: false
IncludeBlocks: Regroup
IncludeCategories:
  - Regex: '<config.h>'
    Priority: -1
  - Regex: '<hayward-.*/.*>'
    Priority: 2
  - Regex: '<.*-protocol.h>'
    Priority: 3
  - Regex: '".*"'
    Priority: 4
  - Regex: '<.+>'
    Priority: 1

